@model TrashCollection.Models.Employee

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Employee Menu</h1>

<style>
    #map {
        height: 100%;
    }

    /* Optional: Makes the sample page fill the window. */
    html,
    body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="card">
                <div class="card-header">
                    <h5>Customer Information</h5>
                </div>
                <div class="card-body">
                    <dl class="col-sm">
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-10">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit Information</a>
                            <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Stop Service</a>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Pay Balance</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Request One Time Pickup</a>
                        </dt>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card">
                <div class="card-header">
                    <h5>Customer Information</h5>
                </div>
                <div class="card-body">
                    <dl class="col-sm">
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col">
                            <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Stop Service</a>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Pay Balance</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Request Pickup</a>
                        </dt>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

